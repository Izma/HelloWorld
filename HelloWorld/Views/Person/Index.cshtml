
@model IQueryable<HelloWorld.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Persons</h2>
<a class="btn btn-outline-primary" href="#">New person</a>
<table class="table table-striped table-bordered table-hover mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Opinion</th>
            <th>Genre</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td><span class="badge badge-secondary">@item.Age</span></td>
                <td>@item.Opinion</td>
                <td>@item.Genre</td>
                <td>
                    <a href="@Url.Action("Details","Person",new { personID=item.PersonID})" class="edit">Edit</a>
                    <a href="@Url.Action("Details","Person",new { personID=item.PersonID, type="delete"})" class="delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.message != "")
{
    <div class="alert alert-info">
        <p> @ViewBag.message</p>
    </div>
}
